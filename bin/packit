#!/usr/bin/env node

/**
 * Dependencies.
 */

var packit = require('../')
  , fs = require('fs');

/**
 * Arguments.
 */

var args = process.argv.slice(2);

/**
 * Options.
 */
 
var options = {};

/**
 * Usage information.
 */

var usage = [
    ''
  , '  Usage: packit [options]'
  , ''
  , '  Options:'
  , ''
  , '    -c, --config      path to config file'
  , '    -o, --output      output file name <templates.js>'
  , '    -n, --namespace   template namespace <templates>'
  , '    -V, --version     output program version'
  , '    -h, --help        display help information'
  , ''
].join('\n');

if (!args.length) { 
  console.log(usage);
  process.exit();
}

var arg;
while (args.length) {
  arg = args.shift();
  switch (arg) {
    case '-h':
    case '--help':
    case 'help':
      console.log(usage);
      process.exit();
      break;
    case '-V':
    case '-v': 
    case '--version':
      console.log(packit.version);
      process.exit();
      break;
    case '-c':
    case '--config':
      options.configPath = args.shift();
      break;
    case '-o':
    case '--output':
      options.outputPath = args.shift();
      break;
    case '-n':
    case '--namespace':
      options.namespace = args.shift();
      break;
    default:
      console.log(usage);
      process.exit();
  }
}

packit.compile(options);

